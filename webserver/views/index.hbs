<div class="panel panel-default">
	<div class="panel-heading">Edit pages</div>

	<table class="table">
	{{#each files}}
		<tr>
			<td>
				<div class="btn-group" data-path="{{this}}">
					<button class="btn btn-danger delete-page">
						<span class="glyphicon glyphicon-trash"></span>
					</button>
					<a class="btn btn-default" href="/edit?path=src/{{this}}">
						<span class="glyphicon glyphicon-pencil"></span>
					</a>
					<a class="btn" href="/edit?path=src/{{this}}">{{this}}</a>
				</div>
			</td>
		</tr>
	{{/each}}
		<tr>
			<td>
				<div class="input-group">
					<input type="text" class="form-control" placeholder="pagename.md"/>
					<div class="input-group-btn">
						<button class="btn btn-default" id="add-new-page">
							<span class="glyphicon glyphicon-plus"></span> Add new page
						</button>
					</div>
				</div>
			</td>
		</tr>
	</table>
</div>

<div class="panel panel-default">
	<div class="panel-heading">Edit configs</div>

	<table class="table">
		<tr>
			<td><a href="/edit?path=settings.json">settings.json</a></td>
		</tr>
	</table>
</div>

<button type="button" class="btn btn-default" id="generate-button">
	<span class="glyphicon glyphicon-refresh" aria-hidden="true"></span> Generate
</button>

<a type="button" class="btn btn-default" href="/review">
	<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Review
</a>

<a type="button" class="btn btn-default" href="/export.zip">
	<span class="glyphicon glyphicon-download" aria-hidden="true"></span> Export
</a>

<div id="alert-placeholder"></div>
